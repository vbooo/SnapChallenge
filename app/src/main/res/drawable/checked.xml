<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <gradient
                        android:startColor="@color/blue_theme"
                        android:centerColor="@color/blue_theme"
                        android:endColor="@color/blue_theme"
                        android:angle="270" />
                    <size
                        android:width="21dp"
                        android:height="21dp" />
                </shape>
            </item>

            <item
                android:width="5dp"
                android:height="2dp"
                android:top="12dp"
                android:left="4dp">
                <rotate
                    android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@android:color/white"/>
                    </shape>
                </rotate>
            </item>

            <item
                android:width="11dp"
                android:height="2dp"
                android:top="10dp"
                android:left="5dp">
                <rotate
                    android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="@android:color/white"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</selector>