<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" android:state_window_focused="false"
        android:drawable="@drawable/check_mark" android:color="@color/blue_theme" android:textColor="@color/blue_theme" />
    <item android:state_checked="false" android:state_window_focused="false"
        android:drawable="@android:color/transparent" android:color="@android:color/black" android:textColor="@android:color/black"/>

    <item android:state_checked="true" android:state_pressed="true"
        android:drawable="@drawable/check_mark" android:color="@color/blue_theme" android:textColor="@color/blue_theme"/>
    <item android:state_checked="false" android:state_pressed="true"
        android:drawable="@android:color/transparent" android:color="@android:color/black" android:textColor="@android:color/black"/>

    <item android:state_checked="true" android:state_focused="true"
        android:drawable="@drawable/check_mark" android:color="@color/blue_theme" android:textColor="@color/blue_theme"/>
    <item android:state_checked="false" android:state_focused="true"
        android:drawable="@android:color/transparent" android:color="@android:color/black" android:textColor="@android:color/black"/>

    <item android:state_checked="false" android:drawable="@android:color/transparent" android:color="@android:color/black" android:textColor="@android:color/black"/>
    <item android:state_checked="true" android:drawable="@drawable/check_mark" android:color="@color/blue_theme" android:textColor="@color/blue_theme"/>

</selector>

