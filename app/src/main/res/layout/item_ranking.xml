<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/item_ranking_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_ranking_layout_user">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_ranking_user_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_friends"
            android:padding="14dp"
           />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/item_ranking_layout_user"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/padding_small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_ranking_image_layout"
        app:layout_constraintLeft_toRightOf="@+id/item_ranking_image_layout"
        app:layout_constraintRight_toLeftOf="@+id/item_ranking_button_subscribe_layout"
        app:layout_constraintEnd_toStartOf="@id/item_ranking_button_subscribe_layout"
        app:layout_constraintHorizontal_bias="0">
        <TextView
            android:id="@+id/item_ranking_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:textSize="@dimen/second_text"/>
        <TextView
            android:id="@+id/item_ranking_user_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:ellipsize="end"
            android:textColor="@color/blue_theme"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_ranking_button_subscribe_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_large"
        android:background="@drawable/background_blue_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_ranking_layout_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/item_ranking_button_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subscribe"
            android:paddingBottom="@dimen/padding_xsmall"
            android:paddingTop="@dimen/padding_xsmall"
            android:paddingEnd="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>