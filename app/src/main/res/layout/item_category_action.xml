<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_category_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    >

    <ImageView
        android:id="@+id/item_category_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:tint="@color/filter_dark"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignStart="@id/item_category_image"
        android:layout_alignTop="@id/item_category_image"
        android:layout_alignEnd="@id/item_category_image"
        android:layout_alignBottom="@id/item_category_image"
        android:gravity="center">

        <TextView
            android:id="@+id/item_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/primary_text"
            android:textColor="@android:color/white"
            android:fontFamily="@font/roboto_medium"
            xmlns:android="http://schemas.android.com/apk/res/android" />

        <TextView android:id="@+id/item_category_nb_challenges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/primary_text"
            android:textColor="@android:color/white"
            android:fontFamily="@font/roboto_medium"
            xmlns:android="http://schemas.android.com/apk/res/android" />

    </LinearLayout>



</RelativeLayout>


