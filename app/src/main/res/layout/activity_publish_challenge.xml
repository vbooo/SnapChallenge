<?xml version="1.0" encoding="utf-8"?>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".activity.PublishChallengeActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/activity_publish_challenge_layout_header"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/activity_publish_challenge_description">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/activity_publish_challenge_image_user"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/user_default"
                        android:padding="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/activity_publish_challenge_layout_name"
                        />

                    <LinearLayout
                        android:id="@+id/activity_publish_challenge_layout_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toRightOf="@+id/activity_publish_challenge_image_user"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/activity_publish_challenge_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fabien Bouvet"
                            android:textStyle="bold"
                            android:paddingBottom="3dp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/second_text"/>

                        <LinearLayout
                            android:id="@+id/activity_publish_challenge_layout_privacy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:background="@drawable/background_privacy">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxWidth="20dp"
                                android:maxHeight="20dp"
                                android:adjustViewBounds="true"
                                android:padding="3dp"
                                android:src="@drawable/public_earth"/>
                            <TextView
                                android:id="@+id/activity_publish_challenge_label_privacy"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/public_word"
                                android:paddingStart="4dp"
                                android:paddingEnd="4dp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:textColor="@color/second_text"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/activity_publish_challenge_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/describe_your_challenge"
                android:paddingStart="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small"
                android:maxLength="144"
                android:background="@null"
                app:layout_constraintTop_toBottomOf="@+id/activity_publish_challenge_layout_header"
                app:layout_constraintBottom_toTopOf="@+id/activity_publish_challenge_image"/>

            <ImageView
                android:id="@+id/activity_publish_challenge_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:foregroundGravity="top"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/activity_publish_challenge_description"
                />
            <VideoView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/activity_publish_challenge_description"
                android:visibility="gone"
                />

        </LinearLayout>
    </ScrollView>

    <!-- START Complete challenge layout -->
    <LinearLayout
        android:id="@+id/activity_publish_challenge_layout_complete_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/activity_privacy_challenge_layout_public"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/activity_publish_challenge_label_complete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/complete_challenge"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <LinearLayout
                android:id="@+id/activity_publish_challenge_layout_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/activity_publish_challenge_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    android:src="@drawable/video"/>
                <ImageView
                    android:id="@+id/activity_publish_challenge_image_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    android:src="@drawable/baseline_camera_alt_blue_18dp"/>
                <ImageView
                    android:id="@+id/activity_publish_challenge_image_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    android:src="@drawable/baseline_location_on_blue_18dp"
                   />

            </LinearLayout>


        </android.support.constraint.ConstraintLayout>

    </LinearLayout>
    <!-- END Complete challenge layout -->

    </android.support.constraint.ConstraintLayout>
